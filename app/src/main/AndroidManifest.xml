<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.initone.twitter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/NoActionBar">
        <activity
            android:name=".view.ui.MainActivity"
            android:theme="@style/AppTheme"
            android:label="@string/title_activity_main"/>
        <activity android:name=".view.ui.UserLoginActivity" />
        <activity android:name=".view.ui.SendOTPActivity" />
        <activity android:name=".view.ui.UserRegistrationActivity" />
        <activity android:name=".view.ui.OnBoardActivity" />
        <activity android:name=".view.ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>